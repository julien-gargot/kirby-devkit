{
    "name": "getkirby/cms",
    "description": "Kirby CMS",
    "version": "3.0.0-alpha-12",
    "keywords": ["kirby", "cms"],
    "homepage": "https://getkirby.com",
    "authors": [
        {
            "name": "Bastian Allgeier",
            "email": "bastian@getkirby.com",
            "homepage": "http://bastianallgeier.com"
        }
    ],
    "support": {
        "email": "support@getkirby.com",
        "issues": "https://github.com/getkirby/kirby/issues",
        "forum": "https://forum.getkirby.com",
        "source": "https://github.com/getkirby/kirby"
    },
    "require": {
        "php": ">=7.0.0",
        "ext-mbstring": "*",
        "mustangostang/spyc": "*",
        "erusev/parsedown-extra": "*",
        "michelf/php-smartypants": "1.8.*",
        "claviska/simpleimage": "3.3.*",
        "phpmailer/phpmailer": "^6.0",
        "defuse/php-encryption": "^2.1",
        "filp/whoops": "^2.1",
        "true/punycode": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "friendsofphp/php-cs-fixer": "^2.11.1"
    },
    "minimum-stability": "dev",
    "autoload": {
        "files": [
            "config/helpers.php",
            "config/aliases.php"
        ],
        "psr-4": {
            "Kirby\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kirby\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --stderr --coverage-html=tests/coverage",
        "zip": "composer archive --format=zip --file=dist",
        "build": "./scripts/build"
    },
    "archive": {
        "exclude": [
            ".*",
            "/*.dist",
            "/*.md",
            "test.php",
            "/scripts",
            "/panel/*",
            "!/panel/dist/*",
            "/panel/dist/index.html",
            "/tests/*",
            "!/vendor/*",
            "/vendor/*/*/.*",
            "/vendor/*/*/*.json",
            "/vendor/*/*/*.txt",
            "/vendor/*/*/*.md",
            "/vendor/*/*/*.yml",
            "/vendor/*/*/*.yaml",
            "/vendor/*/*/*.xml",
            "/vendor/*/*/*.dist",
            "/vendor/*/*/LICENSE",
            "/vendor/*/*/COPYING",
            "/vendor/*/*/docs/*",
            "/vendor/*/*/example/*",
            "/vendor/*/*/examples/*",
            "/vendor/*/*/test/*",
            "/vendor/*/*/tests/*",
            "/vendor/*/*/php4/*"
        ]
    }
}
